<dx:ThemedWindow x:Class="DeskLink.Views.QuickOpenWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
 xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
 Title="Quick Open" Height="380" Width="600" WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
 <DockPanel>
 <TextBox x:Name="Search" DockPanel.Dock="Top" Margin="8" TextChanged="OnTextChanged"/>
 <dxg:GridControl x:Name="Grid" SelectionMode="Row" AutoGenerateColumns="None" MouseDoubleClick="OnDoubleClick">
 <dxg:GridControl.Columns>
 <dxg:GridColumn FieldName="Name" Header="Name"/>
 <dxg:GridColumn FieldName="Target" Header="Target"/>
 <dxg:GridColumn FieldName="Category" Header="Category"/>
 </dxg:GridControl.Columns>
 <dxg:GridControl.View>
 <dxg:TableView ShowGroupPanel="False"/>
 </dxg:GridControl.View>
 </dxg:GridControl>
 </DockPanel>
</dx:ThemedWindow>